<h1>Listado de productos (Home)</h1>

<ul>
    {{#if products.length}}
        {{#each products}}
        <li>
            <strong>{{this.title}}</strong> - ${{this.price}}<br />
            {{this.description}}
        </li>
        {{/each}}
    {{else}}
        <li>No hay productos cargados.</li>
    {{/if}}
</ul>

<a href="/realtimeproducts">Ir a productos en tiempo real</a>
